select#rha-product-select.form-control(
	chosen,
	width='"100%"',
	ng-disabled='ProductsService.products.length === 0 || !securityService.loginStatus.isLoggedIn || CaseService.submittingCase',
	ng-model='CaseService.kase.product',
	ng-change='CaseService.kase.version=""; ProductsService.getVersions(CaseService.kase.product); RecommendationsService.getRecommendations(true); CaseService.validateNewCase();CaseService.updateLocalStorageForNewCase()',
	ng-options='p.code as p.name for p in products',
	options-disabled='p.isDisabled for p in products')
