select#rha-product-select.form-control(
	chosen,
	width='"100%"',
	ng-disabled='ProductsService.products.length === 0 || !securityService.loginStatus.isLoggedIn || CaseService.submittingCase',
	ng-model='CaseService.kase.product',
	ng-change='ProductsService.getVersions(CaseService.kase.product); RecommendationsService.getRecommendations(true); CaseService.validateNewCase()',
	ng-options='p.value as p.label for p in ProductsService.products',
	options-disabled='p.isDisabled for p in ProductsService.products')