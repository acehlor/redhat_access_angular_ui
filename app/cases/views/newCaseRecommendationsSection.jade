#rha-recommendation-section.recommendations.recommendations-inline(ng-hide='RecommendationsService.recommendations.length === 0')
  h3.section-title
    span.inline() {{'Based on your description, here are some possible solutions'|translate}}
    .spinner.spinner-sm.spinner-inline(ng-show='searchInProgress.value')
    span(ng-show='searchInProgress.value') {{'Updating Recommendations'|translate}}
  .row
    .col-sm-4.set(ng-show='RecommendationsService.recommendations.length', ng-repeat="result in results")
      article.card.card-light
        header
          a
            strong(ng-click='triggerAnalytics($event)', href='{{result.resource_view_uri}}', target='_blank') {{result.title | substring:100 }}
        p.article-content
          a(style="word-wrap: break-word;", ng-click='triggerAnalytics($event)', href='{{result.resource_view_uri}}', target='_blank', ng-bind-html='result.abstract')
  .row
    .col-sm-12
      .pull-right.pagination
        button.btn.btn-app(ng-disabled="currentPage === 1", ng-click="selectPage(currentPage - 1)")
          i.fa.fa-long-arrow-left
        button.btn.btn-app(ng-disabled="currentPage >= lastPage", ng-click="selectPage(currentPage + 1)")
          span {{'NEXT'|translate}}
