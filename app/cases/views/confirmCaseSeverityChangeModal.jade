.modal-header
  h3(translate='') Changing Case Severity
.modal-body
  .row
    .col-sm-12
      div {{'Are you sure you want to change this case severity to'|translate}} {{CaseService.kase.severity.name}}?
      div(ng-bind-html='parseArtifactHtml()')
  .row(style='border-top: 1px; solid #cccccc; padding-top: 10px;')
    .col-sm-12
      .pull-right
        button.btn-secondary.btn(
          style='margin-left: 10px;',
          ng-click='closeCases()')
          span {{'Change Severity'|translate}}
        a.margin-left(style='cursor: pointer;', ng-click='closeModal()') {{'Go Back'|translate}}
