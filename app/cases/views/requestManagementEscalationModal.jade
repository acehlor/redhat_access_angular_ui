div.modal-header
  h3(translate='') Request Management Escalation
div.container-fluid(style='padding: 20px;')
  div.row
    div.col-sm-12
      span {{'If you feel the issue has become more severe or the case should be a higher priority, please provide a detailed comment, and the case will be reviewed by a support manager.'|translate}}
      a(href='https://access.redhat.com/site/support/policy/mgt_escalation') {{'Learn more'|translate}}
  div.row(style='padding-top: 10px;')
    div.col-sm-12
      div {{'Comment:'|translate}}
      textarea(style='width: 100%; max-width: 100%; height: 200px;', ng-model='commentText', ng-disabled='submittingRequest')
  div.row(style='border-top: 1px; solid #cccccc; padding-top: 10px;')
    div.col-sm-12
      div.pull-right
        button.btn-secondary.btn(
          style='margin-left: 10px;', 
          ng-click='submitRequestClick(commentText)', 
          ng-disabled='submittingRequest') 
          span {{'Submit Request'|translate}}
      button.btn-secondary.btn.pull-right(ng-click='closeModal()', ng-disabled='submittingRequest') Cancel
      span.rha-search-spinner(ng-show='submittingRequest')
