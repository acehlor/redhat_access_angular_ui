h3.section-title(translate='') Here Are Some Possible Solutions
.spinner.spinner-inline(ng-show='RecommendationsService.loadingRecommendations')
.spinner.spinner-inline(ng-show='loading')
div(ng-hide='loading')
  .block(ng-repeat='recommendation in RecommendationsService.recommendationsOnScreen')
    .title
      .fa.fa-thumb-tack(
        ng-class='{"fa.fa-thumb": recommendation.pinned && !recommendation.pinning, "not-pinned": !recommendation.pinned && !recommendation.pinning, "rha-search-spinner-sm": recommendation.pinning}',
        ng-click='pinRecommendation(recommendation, $index, $event)',
        style='cursor: pointer;') &nbsp;
      a(ng-click='triggerAnalytics($event)', href='{{recommendation.view_uri}}', target='_blank')
        strong {{recommendation.title}}
      span.handpicked(ng-show='recommendation.handPicked', translate='')
        .fa.fa-check
        | Handpicked
    div(ng-bind-html='recommendation.abstract')

  div(style='padding-top: 10px;', ng-hide='RecommendationsService.recommendationsOnScreen.length == 0')
    pagination.pagination-sm(
      boundary-links='true'
      total-items='RecommendationsService.recommendations.length'
      on-select-page='RecommendationsService.selectPage(page)'
      items-per-page='RecommendationsService.pageSize'
      page='RecommendationsService.currentPage'
      max-size='RecommendationsService.maxSize'
      previous-text='<'
      next-text='>'
      first-text='<<'
      last-text='>>')
