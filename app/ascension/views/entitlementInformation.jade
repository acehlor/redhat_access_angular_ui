section.case-details
  h3.section-title.entitlementinfoheader.pre-wrap {{'Entitlement Information'|translate}}
  .spinner.spinner-inline(ng-show='CaseDetailsService.caseDetailsLoading')
  section.config-options-no-mar(ng-show='!CaseDetailsService.caseDetailsLoading')
    .row.row-very-short
      .col-md-2
          strong(translate,translate-comment="Noun") Entitlement Name
      .col-md-10
        span {{CaseDetailsService.kase.entitlement.name}}
    .row.row-very-short
      .col-md-2
          strong(translate,translate-comment="SBT: Service Breach Time") SBT
      .col-md-10
        span {{CaseDetailsService.kase.sbt}}
    .row.row-very-short
      .col-md-2
        strong(translate,translate-comment="Noun") Target Date
      .col-md-10
        span {{CaseDetailsService.kase.target_date}}
    .row.row-very-short
      .col-md-2
        strong(translate,translate-comment="SBT: Service Breach Time") SBT State
      .col-md-10
        span {{CaseDetailsService.kase.sbtState}}
    .row.row-very-short
      .col-md-2
        strong(translate,translate-comment="Noun") Internal Status
      .col-md-10
        span {{CaseDetailsService.kase.internalStatus}}