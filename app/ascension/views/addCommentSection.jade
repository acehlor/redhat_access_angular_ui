.row
  .col-sm-12
    .pull-right(ng-if='securityService.loginStatus.authedUser.is_internal')
      span &nbsp{{'Is Public:'|translate}}&nbsp;
      input#rha-case-comment-isPublic(type='checkbox', ng-model='CaseDetailsService.isCommentPublic',ng-change= 'onCommentPublicChange()')
textarea.comment.expand#case-comment-box.form-control(
  ng-disabled='addingComment',
  maxlength='32000',
  rows='5',
  ng-model='CaseDetailsService.commentText',
  ng-change='onNewCommentKeypress()',
  ng-click='CaseDiscussionService.commentTextBoxEnlargen=true',
  ng-class='{"expanded": CaseDiscussionService.commentTextBoxEnlargen}',
  ng-blur='shouldTextboxMinimize()')
div(ng-show='EDIT_CASE_CONFIG.showAttachments && securityService.loginStatus.authedUser.can_add_attachments')
  div(rha-listnewattachments='')
.row
  .col-xs-7
    #commentNotice.uploadNotice(ng-hide='progressCount < 90')
        span.progressBarWrap
          span.progressCount {{charactersLeft}}
        span {{' characters left.'|translate}}
    div(ng-hide='ie8 || ie9 || !EDIT_CASE_CONFIG.showAttachments || !securityService.loginStatus.authedUser.can_add_attachments', rha-attachfile='', disabled='CaseDetailsService.submittingCase')
      .margin-top-short(ng-bind-html='CaseAttachmentsService.parseArtifactHtml()')
    div(ng-show='EDIT_CASE_CONFIG.showAttachments && securityService.loginStatus.authedUser.can_add_attachments')
      .rha-bottom-border(ng-hide='ie8 && EDIT_CASE_CONFIG.isPCM || ie9 && EDIT_CASE_CONFIG.isPCM')
        .row(ng-hide='CaseDetailsService.submittingCase')
          .col-xs-12
            div(ng-show='EDIT_CASE_CONFIG.showServerSideAttachments')
              .server-attach-header {{'Server File(s) To Attach:'|translate}}
               div(rha-choicetree='',
                 ng-model='attachmentTree',
                 ng-controller='BackEndAttachmentsCtrl')
  .col-xs-5
    .pull-right
      .spinner.spinner-inline(ng-show='addingComment || addingattachment')
      button#rha-case-addcommentbutton.btn.btn-app(
        ng-hide='addingComment || addingattachment',
        ng-disabled='!ie8 && !ie9 && (CaseDetailsService.disableAddComment && CaseAttachmentsService.updatedAttachments.length === 0 && !CaseAttachmentsService.hasBackEndSelections())',
        ng-click='addComment()',
        translate='') Post
      a.margin-left#rha-case-addcommentbutton(ng-click='clearComment()',translate='',ng-hide='addingComment || addingattachment') Cancel
